<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <View android:id="@+id/line1" android:background="@color/common_iot_red" android:layout_width="match_parent" android:layout_height="2dp"/>
        <TextView android:gravity="center" android:id="@+id/tv_strength_weak" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Weak" style="@style/common_text_red_regular_12dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="6dp" android:layout_marginEnd="6dp">
        <View android:id="@+id/line2" android:background="@color/common_iot_divider" android:layout_width="match_parent" android:layout_height="2dp"/>
        <TextView android:textColor="@color/common_iot_orange" android:gravity="center" android:id="@+id/tv_strength_medium" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Medium" style="@style/common_text_red_regular_12dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <View android:id="@+id/line3" android:background="@color/common_iot_divider" android:layout_width="match_parent" android:layout_height="2dp"/>
        <TextView android:textColor="@color/common_iot_green" android:gravity="center" android:id="@+id/tv_strength_strong" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Strong" style="@style/common_text_red_regular_12dp"/>
    </LinearLayout>
</LinearLayout>
