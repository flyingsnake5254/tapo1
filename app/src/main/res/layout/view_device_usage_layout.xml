<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_days" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/today" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" style="@style/common_text_secondary_regular_12dp"/>
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/past_days7" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" style="@style/common_text_secondary_regular_12dp"/>
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/past_days30" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" style="@style/common_text_secondary_regular_12dp"/>
    </LinearLayout>
    <RadioGroup android:orientation="horizontal" android:id="@+id/rg_days" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rb_today" android:checked="true" android:text="@string/today" style="@style/radio_button_bulb_detail_usage"/>
        <View android:background="#f2f6f7" android:layout_width="0.5dp" android:layout_height="match_parent"/>
        <RadioButton android:id="@+id/rb_past_7days" android:text="@string/past_days7" style="@style/radio_button_bulb_detail_usage"/>
        <View android:background="#f2f6f7" android:layout_width="0.5dp" android:layout_height="match_parent"/>
        <RadioButton android:id="@+id/rb_past_30days" android:text="@string/past_days30" style="@style/radio_button_bulb_detail_usage"/>
    </RadioGroup>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <TextView android:gravity="center" android:id="@+id/tv_runtime" android:layout_width="0dp" android:layout_height="wrap_content" android:text="--" android:layout_weight="1" android:layout_marginStart="10dp" android:layout_marginEnd="5dp" style="@style/common_text_main_dark_regular_20dp"/>
        <TextView android:gravity="center" android:id="@+id/tv_power" android:layout_width="0dp" android:layout_height="wrap_content" android:text="--" android:layout_weight="1" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" style="@style/common_text_main_dark_regular_20dp"/>
        <TextView android:gravity="center" android:id="@+id/tv_saved" android:layout_width="0dp" android:layout_height="wrap_content" android:text="--" android:layout_weight="1" android:layout_marginStart="5dp" android:layout_marginEnd="10dp" style="@style/common_text_main_dark_regular_20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_usage_type" android:paddingBottom="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/plug_runtime" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" style="@style/common_text_secondary_regular_14dp"/>
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/usage" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" style="@style/common_text_secondary_regular_14dp"/>
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/saving" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" style="@style/common_text_secondary_regular_14dp"/>
    </LinearLayout>
</LinearLayout>
