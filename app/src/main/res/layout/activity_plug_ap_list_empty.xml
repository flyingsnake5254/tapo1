<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quicksetup_no_available_network" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_main_dark_medium_20dp"/>
            <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="10dp" android:text="@string/quicksetup_no_available_24g" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_body_regular_16dp"/>
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:src="@mipmap/wifi_search"/>
        </LinearLayout>
        <RelativeLayout android:gravity="center_horizontal" android:paddingTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ll_content" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                <Button android:layout_gravity="center_horizontal" android:id="@+id/btn_bottom" android:layout_marginBottom="5dp" android:text="@string/quicksetup_list_rescan" style="@style/m6_common_blue_300_button"/>
                <Button android:layout_gravity="center_horizontal" android:id="@+id/btn_other" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:text="@string/quicksetup_ap_other_network" style="@style/iot_common_flat_white_button_with_blue_stroke"/>
                <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="24dp" android:text="@string/quicksetup_ap_can_not_find_wifi" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" style="@style/common_text_purple_regular_16dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
