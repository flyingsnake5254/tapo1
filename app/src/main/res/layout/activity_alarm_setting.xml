                </RelativeLayout>
                <RelativeLayout android:gravity="center_vertical" android:id="@+id/sound_type" android:tag="binding_5" android:background="@drawable/clickable_item_background" android:clickable="true" android:layout_width="match_parent" android:layout_height="76dp">
