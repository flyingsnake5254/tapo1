                            <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/color_333333" android:id="@+id/item_schedule_end_time" android:tag="binding_11" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:textSize="12sp" android:textColor="@color/tomato" android:id="@+id/item_schedule_next_day_tv" android:tag="binding_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mode_edit_next_day"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.tplink.iot.view.ipcamera.widget.ScheduleWeekdayTextView android:id="@+id/weekday_selected_view" android:tag="binding_13" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="17dp" android:layout_below="@+id/time_text" android:layout_marginStart="20dp" style="@style/common_dark_gray_regular_text_14dp"/>
