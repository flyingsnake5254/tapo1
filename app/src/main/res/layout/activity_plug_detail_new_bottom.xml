<?xml version="1.0" encoding="utf-8"?>
<com.yinglan.scrolllayout.content.ContentScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/scroll_switch_view" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:fadeScrollbars="false">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:id="@+id/iv_pull_up_down" android:background="@mipmap/bg_detail_arrow" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/ic_pull_up" android:contentDescription="@null"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_rules" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_schedule" android:paddingTop="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@mipmap/plug_ic_schedule" android:layout_weight="1"/>
            <ImageView android:id="@+id/iv_away" android:paddingTop="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@mipmap/plug_ic_away" android:layout_weight="1"/>
            <ImageView android:id="@+id/iv_timer" android:paddingTop="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@mipmap/plug_ic_timer" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingBottom="50dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_text" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:ellipsize="end" android:gravity="center" android:id="@+id/tv_schedule" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/plug_schedule" android:maxLines="2" android:layout_weight="1" style="@style/common_text_main_dark_regular_16dp"/>
                <TextView android:ellipsize="end" android:gravity="center" android:id="@+id/tv_away" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/plug_mode_away" android:maxLines="2" android:layout_weight="1" style="@style/common_text_main_dark_regular_16dp"/>
                <TextView android:ellipsize="end" android:gravity="center" android:id="@+id/tv_timer" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/plug_timer" android:maxLines="2" android:layout_weight="1" style="@style/common_text_main_dark_regular_16dp"/>
            </LinearLayout>
            <com.tplink.iot.widget.businessview.ThingNextEventView android:id="@+id/thing_next_event_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/rl_next_event" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/color_F7F7F7" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginBottom="17dp"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/plug_next_event" android:layout_centerVertical="true" android:textAllCaps="true" android:layout_marginStart="20dp" android:layout_toStartOf="@+id/iv_next_event_type" style="@style/common_text_secondary_medium_12dp"/>
                    <ImageView android:id="@+id/iv_next_event_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginEnd="24dp" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <TextView android:gravity="center" android:id="@+id/tv_next_event_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="24dp" android:layout_marginEnd="16dp" style="@style/common_text_secondary_regular_14dp"/>
                    <TextView android:gravity="end" android:id="@+id/tv_next_event_action" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="24dp" android:layout_toEndOf="@+id/tv_next_event_time" android:layout_alignParentEnd="true" style="@style/common_text_secondary_regular_14dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View style="@style/common_divider_block_8dp"/>
            <com.tplink.iot.widget.businessview.ThingUsageView android:id="@+id/thing_usage_view" android:paddingTop="10dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:isRuntimeType="true"/>
            <com.tplink.iot.widget.plug.EnergyMonitoringView android:id="@+id/energy_monitoring_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <View style="@style/common_divider_block_8dp"/>
            <RelativeLayout android:id="@+id/rl_common_device" android:layout_width="match_parent" android:layout_height="56dp">
                <TextView android:ellipsize="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/common_favorite" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/switch_button" style="@style/common_text_main_dark_regular_16dp"/>
                <com.tplink.libtpcontrols.materialnormalcompat.swicth.TPSwitchCompat android:id="@+id/switch_button" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:switchMinWidth="@dimen/switch_compat_width" style="@style/custom_switch_compat"/>
                <View android:layout_alignParentBottom="true" style="@style/common_divider_1dp_margin_start_20dp"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/item_device_share" android:visibility="gone" android:layout_width="match_parent" android:layout_height="56dp">
                <TextView android:ellipsize="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/share_device_share_devices" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/tv_person" style="@style/common_text_main_dark_regular_16dp"/>
                <TextView android:ellipsize="end" android:id="@+id/tv_person" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:drawablePadding="3dp" android:layout_centerVertical="true" android:drawableStart="@mipmap/device_share_person" android:layout_marginEnd="6dp" android:layout_toStartOf="@+id/arrow_share" style="@style/common_text_secondary_regular_14dp"/>
                <ImageView android:id="@+id/arrow_share" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/arrow_more" android:layout_centerInParent="true" android:contentDescription="@null" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
                <View android:layout_alignParentBottom="true" style="@style/common_divider_1dp_margin_start_20dp"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/item_faq_feedback" android:layout_width="match_parent" android:layout_height="56dp">
                <TextView android:ellipsize="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/faq_feedback" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/arrow_help" style="@style/common_text_main_dark_regular_16dp"/>
                <ImageView android:id="@+id/arrow_help" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/arrow_more" android:layout_centerInParent="true" android:contentDescription="@null" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
                <View android:layout_alignParentBottom="true" style="@style/common_divider_1dp_margin_start_20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.yinglan.scrolllayout.content.ContentScrollView>
