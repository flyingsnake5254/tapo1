<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/transparent" android:paddingTop="64dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/ll_layout" android:background="@drawable/bg_top_round_corner" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:background="@drawable/bg_dialog_edit_color_bulb_preset_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_close" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/home_close" android:contentDescription="@null"/>
            <ImageView android:id="@+id/iv_save" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/action_ok_dark_gray" android:contentDescription="@null" android:layout_marginEnd="0dp" android:layout_alignParentEnd="true"/>
            <TextView android:ellipsize="end" android:gravity="center" android:id="@+id/tv_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/edit_preset" android:singleLine="true" android:layout_centerVertical="true" android:layout_toStartOf="@+id/iv_save" android:layout_toEndOf="@+id/iv_close" style="@style/common_text_main_dark_medium_20dp"/>
        </RelativeLayout>
        <ScrollView android:id="@+id/scroll_view" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.tplink.iot.widget.colorbulb.ColorPresetEditWrapView android:id="@+id/color_preset_view" android:layout_width="match_parent" android:layout_height="wrap_content" app:brightnessVisible="false" app:colorMode="wideColorGamut"/>
                <Button android:textColor="@color/color_EB4954" android:id="@+id/btn_delete" android:layout_marginTop="30dp" android:layout_marginBottom="40dp" android:text="@string/common_delete" style="@style/iot_common_flat_white_button_with_red_stroke"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
