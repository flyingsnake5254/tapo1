<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/device_setting_common_item_height">
                    <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/firmware_auto_update" android:layout_marginStart="@dimen/device_setting_common_margin_start" style="@style/common_text_main_dark_regular_16dp"/>
                    <CheckBox android:layout_gravity="end|center_vertical" android:id="@+id/auto_update_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/switch_selector" android:layout_marginEnd="@dimen/device_setting_common_margin_end"/>
                </FrameLayout>
                <View style="@style/common_divider_1dp_margin_start_20dp"/>
                <TextView android:background="@color/white" android:paddingTop="10dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/firmware_auto_update_hint" android:paddingStart="@dimen/device_setting_common_margin_start" android:paddingEnd="@dimen/device_setting_common_margin_start" style="@style/common_text_annotation_regular_14dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/layout_auto_update_schedule" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View style="@style/common_divider_block_8dp"/>
                    <RelativeLayout android:id="@+id/item_reboot_time" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="@string/firmware_auto_update_time" android:layout_centerVertical="true" android:layout_marginStart="@dimen/device_setting_common_margin_start" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/auto_update_time" android:layout_alignParentStart="true" style="@style/common_text_main_dark_regular_16dp"/>
                        <TextView android:id="@+id/auto_update_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" style="@style/common_text_blue_medium_18dp"/>
                    </RelativeLayout>
                    <View style="@style/common_divider_1dp_margin_start_20dp"/>
                    <TextView android:background="@color/white" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/firmware_auto_update_select_time_hint" android:paddingStart="@dimen/device_setting_common_margin_start" android:paddingEnd="@dimen/device_setting_common_margin_start" style="@style/common_text_annotation_regular_14dp"/>
                    <TextView android:background="@color/white" android:paddingTop="10dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/firmware_auto_update_note" android:paddingStart="@dimen/device_setting_common_margin_start" android:paddingEnd="@dimen/device_setting_common_margin_start" style="@style/common_text_annotation_regular_14dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <com.tplink.iot.view.ipcamera.widget.CameraLoadingView android:layout_gravity="center" android:id="@+id/loading_view" android:padding="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" app:loading_block_height="90dp" app:loading_block_width="90dp"/>
    </FrameLayout>
</LinearLayout>
