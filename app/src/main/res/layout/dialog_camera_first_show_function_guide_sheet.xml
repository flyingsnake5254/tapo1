<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/function_welcome_parent" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:background="@color/common_white" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/welcome_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/welcome_hi_text" android:layout_centerHorizontal="true"/>
                <TextView android:id="@+id/welcome_hi_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:text="@string/camera_welcome" android:layout_centerInParent="true" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" style="@style/common_text_main_dark_bold_20dp"/>
                <TextView android:id="@+id/welcome_introduce_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="100dp" android:text="@string/camera_welcome_words" android:layout_below="@+id/welcome_hi_text" android:layout_centerHorizontal="true" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" style="@style/common_light_gray_regular_text_14dp"/>
                <Button android:id="@+id/btn_go" android:layout_marginBottom="40dp" android:text="@string/camera_introduce_go" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="@style/m6_common_blue_300_button"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/function_introduce_parent" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:background="@color/common_white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>
        <ScrollView android:background="@color/common_white" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="match_parent">
                    <androidx.viewpager2.widget.ViewPager2 android:id="@+id/function_view_pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </LinearLayout>
                <RelativeLayout android:gravity="center_horizontal" android:paddingTop="24dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/position_dot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp">
                            <ImageView android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <TextView android:id="@+id/exit_introduce" android:visibility="invisible" android:layout_marginBottom="14dp" android:text="@string/action_got_it" style="@style/m6_common_blue_300_button"/>
                        <TextView android:gravity="center" android:id="@+id/tv_start_trial_url" android:background="@drawable/common_button_blue_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:minWidth="@dimen/iot_common_button_width" android:minHeight="@dimen/iot_common_button_height" android:textAllCaps="true" android:paddingStart="14dp" android:paddingEnd="14dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" style="@style/common_white_medium_text_18dp"/>
                        <TextView android:layout_gravity="center" android:id="@+id/btn_exit" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/action_got_it" style="@style/common_text_purple_regular_16dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
