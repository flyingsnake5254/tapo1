<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/common_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/ll_bottom_button" android:layout_alignParentTop="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/common_iot_orange" android:id="@+id/tv_not_power_off_hint" android:background="#20ffaa00" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/firmware_update_not_power_off_and_restart" android:paddingStart="20dp" android:paddingEnd="20dp"/>
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_multi_top_img" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:src="@mipmap/info_yellow" android:contentDescription="@null"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_subg_update_hub" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/subg_qs_update_hub_before_setup" android:lineSpacingExtra="3dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" style="@style/common_text_main_dark_regular_14dp"/>
                <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/subg_update_hub" android:contentDescription="@null"/>
            </LinearLayout>
            <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_multi_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fw_check_success_title" android:lineSpacingExtra="3dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" style="@style/common_text_main_dark_regular_14dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_update_device_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <View android:layout_marginBottom="16dp" style="@style/common_divider_1dp"/>
                <TextView android:id="@+id/tv_plug_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" style="@style/common_text_main_dark_medium_16dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_location" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fw_location" style="@style/common_text_secondary_regular_14dp"/>
                    <TextView android:id="@+id/tv_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/location_bedroom" style="@style/common_text_main_dark_regular_16dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fw_new_firmware_version" style="@style/common_text_secondary_regular_14dp"/>
                    <TextView android:id="@+id/tv_latest_fw_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" style="@style/common_text_main_dark_regular_16dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_what_new" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fw_what_new" style="@style/common_text_secondary_regular_14dp"/>
                    <TextView android:id="@+id/tv_what_new" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/common_text_main_dark_regular_16dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_bottom_button" android:paddingTop="10dp" android:paddingBottom="19dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include layout="@layout/layout_auto_update_item"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_sub_device_hint" android:paddingBottom="24dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/firmware_update_downloaded_but_not_transferred_desc" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" style="@style/common_text_main_dark_regular_16dp"/>
            <Button android:id="@+id/btn_multi_button" android:visibility="gone" android:layout_marginBottom="5dp" android:text="@string/fw_update_now" style="@style/m6_common_blue_300_button"/>
            <com.tplink.iot.widget.ProgressBarButton android:layout_gravity="center" android:id="@+id/progress_button" android:layout_marginBottom="5dp" android:text="@string/fw_update_now" app:pbb_button_text_color="@color/common_white" app:pbb_type="1" style="@style/m6_common_blue_300_button"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
