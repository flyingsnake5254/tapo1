<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView android:orientation="vertical" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_above="@+id/layout_bottom">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.tplink.iot.widget.ItemSettingLayout android:id="@+id/item_name" android:layout_width="match_parent" android:layout_height="wrap_content" app:item_right_arrow_visible="true" app:item_set_title_hint="@string/group_name"/>
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/item_avatar" android:background="?android:attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/item_icon_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/group_icon" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/common_text_main_dark_regular_16dp"/>
                    <ImageView android:id="@+id/plug_avatar" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginTop="6dp" android:contentDescription="@null" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/item_icon_hint"/>
                    <ImageView android:id="@+id/right_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/arrow_more" android:layout_centerInParent="true" android:contentDescription="@null" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
                    <View android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/plug_avatar" style="@style/common_divider_1dp_margin_start_20dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.tplink.iot.widget.ItemSettingLayout android:id="@+id/item_location" android:layout_width="match_parent" android:layout_height="wrap_content" app:item_right_arrow_visible="true" app:item_set_title_hint="@string/group_location"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/layout_available_device" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/group_devices" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_annotation_medium_14dp"/>
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view_available_device" android:paddingTop="10dp" android:paddingBottom="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp" android:nestedScrollingEnabled="false"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/layout_old_device" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/group_local_devices" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_annotation_medium_14dp"/>
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view_old_device" android:paddingTop="10dp" android:paddingBottom="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp" android:nestedScrollingEnabled="false"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/group_local_devices_content" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_secondary_regular_14dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout android:orientation="vertical" android:id="@+id/layout_bottom" android:paddingTop="24dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true">
            <Button android:id="@+id/btn_bottom" android:layout_marginBottom="5dp" style="@style/m6_common_blue_300_button"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
