<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/item_avatar" android:background="?android:attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/item_icon_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/group_icon" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/common_text_main_dark_regular_16dp"/>
                    <ImageView android:id="@+id/plug_avatar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@mipmap/iot_bulb_48" android:contentDescription="@null" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/item_icon_hint"/>
                    <ImageView android:id="@+id/right_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/arrow_more" android:layout_centerInParent="true" android:contentDescription="@null" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
                    <View android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/plug_avatar" style="@style/common_divider_1dp_margin_start_20dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.tplink.iot.widget.ItemSettingLayout android:id="@+id/item_name" android:layout_width="match_parent" android:layout_height="wrap_content" app:item_right_arrow_visible="true" app:item_set_title_hint="@string/group_name"/>
                <com.tplink.iot.widget.ItemSettingLayout android:id="@+id/item_location" android:layout_width="match_parent" android:layout_height="wrap_content" app:item_right_arrow_visible="true" app:item_set_title_hint="@string/group_location"/>
                <View android:background="@color/internal_grey" android:layout_width="match_parent" android:layout_height="12dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/item_brightness_preset" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:background="?android:attr/selectableItemBackground" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/bulb_settings_brightness_preset" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/right_arrow_brightness" style="@style/common_text_main_dark_regular_16dp"/>
                        <ImageView android:id="@+id/right_arrow_brightness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/arrow_more" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View style="@style/common_divider_1dp_margin_start_20dp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:gravity="center_horizontal" android:paddingTop="24dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ll_content" android:layout_alignParentBottom="true">
                <Button android:textColor="@color/color_EB4954" android:id="@+id/btn_remove" android:layout_marginBottom="5dp" android:text="@string/home_group_device_empty_remove" android:layout_alignParentBottom="true" style="@style/iot_common_flat_white_button_with_red_stroke"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
