            <com.tplink.iot.widget.BrightnessSeekBar android:id="@+id/brightness_seek_bar" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <FrameLayout android:paddingTop="32dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <Button android:layout_gravity="bottom|center_horizontal" android:id="@+id/btn_save" android:tag="binding_5" android:text="@string/common_save" style="@style/iot_common_flat_blue_button"/>
                <Button android:layout_gravity="bottom|center_horizontal" android:id="@+id/btn_delete" android:tag="binding_6" android:visibility="gone" android:text="@string/delete" style="@style/iot_common_flat_white_button_with_red_stroke"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
