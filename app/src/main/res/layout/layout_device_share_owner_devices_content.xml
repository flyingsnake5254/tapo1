<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_owner_shared" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="@string/share_device_share_device_title" style="@style/common_divider_text_view"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycle_view_owner_shared" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_owner_unshared" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="@string/share_device_share_device_no_title" style="@style/common_divider_text_view"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycle_view_owner_unshared" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
