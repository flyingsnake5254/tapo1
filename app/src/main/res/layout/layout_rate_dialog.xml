<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="280dp" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/youyou_question" android:scaleType="fitXY"/>
        <TextView android:textSize="@dimen/text_size_18" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rate_dialog_title" android:fontFamily="sans-serif-medium" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
        <TextView android:textSize="@dimen/text_size_18" android:textColor="@color/color_cc333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/rate_dialog_content" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
        <TextView android:textSize="17sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/positive_btn" android:background="@drawable/rate_dialog_button" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginTop="16dp" android:text="@string/rate_dialog_positive_btn_text" android:fontFamily="sans-serif-medium" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/negative_btn" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginBottom="8dp" android:text="@string/rate_dialog_negative_btn_text" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/close" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/close_gray" android:scaleType="fitXY" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
