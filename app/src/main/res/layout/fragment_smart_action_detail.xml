<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <View style="@style/m6_common_divider"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:id="@+id/tv_condition_met_all_warning" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/smart_trigger_all_conditions_met_impossible_hint" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" style="@style/common_text_secondary_regular_14dp"/>
            <TextView android:id="@+id/tv_shortcut_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/common_name" android:paddingStart="20dp" android:paddingEnd="20dp" style="@style/common_text_secondary_medium_14dp"/>
            <com.tplink.iot.widget.DrawableEditText android:id="@+id/et_edit_action_name" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp" app:hint="@string/smart_action_add_tasks_example" app:textPaddingLeft="8dp" app:textPaddingRight="8dp"/>
            <View android:background="@color/internal_grey" android:layout_width="match_parent" android:layout_height="8dp"/>
            <RelativeLayout android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp">
                <TextView android:gravity="center_vertical" android:id="@+id/condition_type_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="@string/smart_action_when" android:layout_alignParentTop="true" style="@style/common_text_secondary_medium_14dp"/>
                <ImageView android:id="@+id/iv_warning" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/smart_warning_icon" android:layout_alignTop="@+id/condition_type_spinner" android:layout_alignBottom="@+id/condition_type_spinner" android:contentDescription="@null" android:paddingEnd="8dp" android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.AppCompatSpinner android:id="@+id/condition_type_spinner" android:background="@drawable/shape_spinner_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/condition_type_tv" android:dropDownVerticalOffset="40dp" android:paddingStart="0dp" android:paddingEnd="20dp" android:layout_toEndOf="@+id/iv_warning"/>
            </RelativeLayout>
            <View style="@style/m6_common_divider"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/cy_action_schedules" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.tplink.iot.widget.ItemSmartSettingLayout android:id="@+id/rl_add_conditions" android:layout_width="match_parent" android:layout_height="wrap_content" app:icon_res="@mipmap/ic_blue_add" app:right_arrow_visible="false" app:set_title="@string/smart_action_add_condition" app:set_title_info="@string/smart_action_add_condition_example"/>
            <View android:background="@color/internal_grey" android:layout_width="match_parent" android:layout_height="8dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/smart_action_then" android:paddingStart="20dp" android:paddingEnd="20dp" style="@style/common_text_secondary_medium_14dp"/>
                <TextView android:gravity="end|center_vertical" android:id="@+id/tv_action_tasks_delay" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/smart_action_then_delay" android:layout_weight="1" android:paddingStart="16dp" android:paddingEnd="16dp" style="@style/common_text_secondary_medium_14dp"/>
            </LinearLayout>
            <View style="@style/m6_common_divider"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/cy_action_tasks" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.tplink.iot.widget.ItemSmartSettingLayout android:id="@+id/rl_add_tasks" android:layout_width="match_parent" android:layout_height="wrap_content" app:icon_res="@mipmap/ic_blue_add" app:right_arrow_visible="false" app:set_title="@string/smart_action_add_tasks" app:set_title_info="@string/smart_action_add_tasks_example"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_shortcut_icon" android:background="?android:attr/selectableItemBackground" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/internal_grey" android:layout_width="match_parent" android:layout_height="8dp"/>
                <LinearLayout android:orientation="horizontal" android:background="@null" android:layout_width="match_parent" android:layout_height="60dp" android:paddingStart="20dp" android:paddingEnd="0dp">
                    <ImageView android:gravity="center_vertical" android:id="@+id/iv_shortcut_icon" android:layout_width="wrap_content" android:layout_height="match_parent" android:scaleType="fitCenter" android:adjustViewBounds="true" android:maxWidth="36dp" android:maxHeight="36dp"/>
                    <TextView android:ellipsize="end" android:gravity="center_vertical" android:text="@string/smart_shortcut_icon" android:lines="1" android:drawableEnd="@mipmap/more" style="@style/SmartActionsSettingsItem"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/common_divider_1dp_margin_start_20dp"/>
            <View android:id="@+id/divider_effective_time" android:background="@color/internal_grey" android:layout_width="match_parent" android:layout_height="8dp"/>
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/common_iot_dark_black" android:gravity="center_vertical" android:id="@+id/tv_effective_time" android:background="?android:attr/selectableItemBackground" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:text="@string/smart_action_effective_time" android:paddingStart="20dp" android:paddingEnd="20dp" app:drawableEndCompat="@mipmap/arrow_more"/>
            <View android:id="@+id/e_t_divider" android:visibility="gone" android:layout_marginStart="20dp" style="@style/common_divider_1dp"/>
            <FrameLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="64dp" android:layout_marginBottom="24dp">
                <Button android:textSize="@dimen/m6_text_size_16dp" android:layout_gravity="bottom" android:id="@+id/btn_edit_action_delete" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/delete" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" style="@style/iot_common_flat_white_button_with_red_stroke"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
