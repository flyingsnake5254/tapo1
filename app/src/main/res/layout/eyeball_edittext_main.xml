<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatAutoCompleteTextView android:gravity="center_horizontal" android:id="@+id/edittext" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:completionThreshold="1" android:layout_centerVertical="true" android:dropDownVerticalOffset="4dp" android:paddingStart="48dp" android:paddingEnd="48dp"/>
    <ImageView android:id="@+id/ic_eyeball_iv" android:clickable="true" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/common_eye_closed_selector" android:layout_centerVertical="true" android:layout_marginEnd="3dp" android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/ic_clear_iv" android:visibility="gone" android:clickable="true" android:layout_width="20dp" android:layout_height="20dp" android:src="@mipmap/ic_delete_normal" android:layout_centerVertical="true" android:layout_marginEnd="28dp" android:layout_alignParentEnd="true"/>
    <View android:id="@+id/subline_view" android:background="@color/common_tplink_light_gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/edittext"/>
</RelativeLayout>
