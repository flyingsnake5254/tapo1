<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <androidx.cardview.widget.CardView android:id="@+id/cv_devices_discovery" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="8dp" app:cardBackgroundColor="@color/local_only_tip_bg" app:cardCornerRadius="4dp" app:cardElevation="0dp">
        <TextView android:textColor="@color/local_only_tip_text" android:id="@+id/tv_devices_discovery" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/discovery_have_preconfigured_devices_hint" android:paddingStart="14dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/img_more_local" style="@style/common_text_main_dark_regular_14dp"/>
    </androidx.cardview.widget.CardView>
    <TextView android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/work_with_tapo" android:textAllCaps="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" style="@style/common_text_main_dark_medium_16dp"/>
    <HorizontalScrollView android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp">
            <TextView android:textSize="13sp" android:gravity="center" android:id="@+id/tv_amazon_alexa" android:padding="16dp" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/amazon_alexa" android:drawableTop="@mipmap/alexa_assistant" android:drawablePadding="10dp" style="@style/common_text_main_dark_regular_12dp"/>
            <TextView android:textSize="13sp" android:gravity="center" android:id="@+id/tv_google_assistant" android:padding="16dp" android:visibility="visible" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/google_assistant" android:drawableTop="@mipmap/google_assistant" android:drawablePadding="10dp" android:layout_marginStart="20dp" style="@style/common_text_main_dark_regular_12dp"/>
            <TextView android:textSize="13sp" android:gravity="center" android:id="@+id/tv_alice" android:padding="16dp" android:visibility="gone" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/yandex_alice" android:drawableTop="@mipmap/alice_assistant" android:drawablePadding="10dp" android:layout_marginStart="20dp" style="@style/common_text_main_dark_regular_12dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View android:visibility="gone" style="@style/common_divider_block_8dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <RadioGroup android:orientation="vertical" android:id="@+id/rg_category" android:layout_width="90dp" android:layout_height="wrap_content">
            <RadioButton android:textSize="12sp" android:textColor="@drawable/text_color_selector_blue_gray" android:ellipsize="end" android:id="@+id/item_camera" android:background="@drawable/bg_select_category_item_selector" android:paddingLeft="10dp" android:paddingTop="14dp" android:paddingRight="10dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:checked="true" android:button="@null" android:text="@string/iot_cameras" android:maxLines="2"/>
            <RadioButton android:textSize="12sp" android:textColor="@drawable/text_color_selector_blue_gray" android:ellipsize="end" android:id="@+id/item_plug" android:background="@drawable/bg_select_category_item_selector" android:paddingLeft="10dp" android:paddingTop="14dp" android:paddingRight="10dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@null" android:text="@string/iot_plugs" android:maxLines="2"/>
            <RadioButton android:textSize="12sp" android:textColor="@drawable/text_color_selector_blue_gray" android:ellipsize="end" android:id="@+id/item_bulb" android:background="@drawable/bg_select_category_item_selector" android:paddingLeft="10dp" android:paddingTop="14dp" android:paddingRight="10dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@null" android:text="@string/iot_bulbs" android:maxLines="2"/>
            <RadioButton android:textSize="12sp" android:textColor="@drawable/text_color_selector_blue_gray" android:ellipsize="end" android:id="@+id/item_light_strip" android:background="@drawable/bg_select_category_item_selector" android:paddingLeft="10dp" android:paddingTop="14dp" android:paddingRight="10dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@null" android:text="@string/iot_light_strips" android:maxLines="2" app:minTextSize="4sp"/>
        </RadioGroup>
        <View android:background="@color/color_F5F5F5" android:layout_width="2dp" android:layout_height="match_parent"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
