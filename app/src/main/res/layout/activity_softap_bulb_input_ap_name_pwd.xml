<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/common_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/img_back" android:padding="@dimen/quick_setup_close_new_vi_padding" android:layout_width="@dimen/quick_setup_close_new_vi_width" android:layout_height="@dimen/quick_setup_close_new_vi_width" android:src="@mipmap/back"/>
    <ScrollView android:background="@color/common_white" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:fadeScrollbars="false">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rl_content" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quicksetup_ap_other_tap_add_enter" android:layout_centerHorizontal="true" android:layout_marginStart="40dp" android:layout_marginEnd="40dp" style="@style/common_text_main_dark_medium_20dp"/>
                <TextView android:id="@+id/tv_tip_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:text="@string/quicksetup_create_new_network_wifi_name" android:layout_below="@+id/tv_title" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_secondary_regular_14dp"/>
                <com.tplink.iot.widget.DrawableEditText android:id="@+id/edit_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLength="32" android:layout_below="@+id/tv_tip_name" android:imeOptions="actionNext" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
                <TextView android:id="@+id/tv_tip_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/quicksetup_create_new_network_password" android:layout_below="@+id/edit_name" android:layout_marginStart="16dp" android:layout_marginEnd="12dp" style="@style/common_text_secondary_regular_14dp"/>
                <com.tplink.iot.widget.DrawableEditText android:id="@+id/edit_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLength="64" android:layout_below="@+id/tv_tip_password" android:inputType="textPassword" android:imeOptions="actionDone" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:passwordVisible="true"/>
                <TextView android:id="@+id/tv_password_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qs_wifi_password_input_notice" android:layout_below="@+id/edit_password" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_secondary_regular_14dp"/>
            </RelativeLayout>
            <include android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_content" android:layout_alignParentBottom="true" layout="@layout/layout_quicksetup_common_bottom_button"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
