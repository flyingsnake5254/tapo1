            <ImageView android:layout_gravity="center" android:id="@+id/iv_shortcut_loading" android:layout_width="20dp" android:layout_height="20dp" android:src="@mipmap/icon_shortcut_loading"/>
        </FrameLayout>
        <FrameLayout android:gravity="center" android:id="@+id/view_disable" android:background="#99ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>
