<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/common_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/img_back" android:padding="@dimen/quick_setup_close_new_vi_padding" android:layout_width="@dimen/quick_setup_close_new_vi_width" android:layout_height="@dimen/quick_setup_close_new_vi_width" android:src="@mipmap/back" android:contentDescription="@null"/>
    <ScrollView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:fadeScrollbars="false">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/rl_content" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quicksetup_ap_password_input" android:layout_marginStart="40dp" android:layout_marginEnd="40dp" style="@style/common_text_main_dark_medium_20dp"/>
                <TextView android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/quicksetup_ap_password_input_tip" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_secondary_regular_14dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:text="@string/quicksetup_create_new_network_wifi_name" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_secondary_regular_14dp"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <TextView android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/tv_select" android:layout_alignParentStart="true" style="@style/common_text_main_dark_regular_16dp"/>
                    <TextView android:id="@+id/tv_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quicksetup_ap_password_input_select" android:layout_centerVertical="true" android:textAllCaps="true" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" style="@style/common_text_blue_medium_16dp"/>
                </RelativeLayout>
                <TextView android:id="@+id/tv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:text="@string/quicksetup_create_new_network_password" android:layout_marginStart="16dp" android:layout_marginEnd="18dp" style="@style/common_text_secondary_regular_14dp"/>
                <com.tplink.iot.widget.DrawableEditText android:id="@+id/edit_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLength="64" android:inputType="textPassword" android:imeOptions="actionDone" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:passwordVisible="true"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/input_notice_space_sensitive" android:layout_marginStart="16dp" android:layout_marginEnd="18dp" style="@style/common_text_secondary_regular_14dp"/>
            </LinearLayout>
            <CheckBox android:id="@+id/cb_save_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:button="@drawable/cb_save_wifi_selector" android:text="@string/qs_ap_save_password" android:layout_below="@+id/rl_content" android:paddingStart="8dp" android:paddingEnd="0dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/common_text_secondary_regular_14dp"/>
            <include android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/cb_save_password" android:layout_alignParentBottom="true" layout="@layout/layout_quicksetup_common_bottom_button"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
