<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="280dp">
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@mipmap/detect_config_success"/>
    <LinearLayout android:orientation="vertical" android:paddingLeft="21dp" android:paddingRight="21dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mode_active_success_title" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="14sp" android:textColor="@color/text_gray" android:id="@+id/mode_success_hint_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:lineSpacingExtra="5sp"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="@color/common_iot_main_blue" android:layout_gravity="end" android:id="@+id/mode_success_btn" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:text="@string/action_got_it" android:fontFamily="sans-serif-medium" android:layout_marginEnd="10dp"/>
</LinearLayout>
