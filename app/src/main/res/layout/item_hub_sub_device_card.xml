<?xml version="1.0" encoding="utf-8"?>
<com.tplink.iot.widget.RippleCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/card_sub_device" android:tag="layout/item_hub_sub_device_card_0" android:layout_width="match_parent" android:layout_height="106dp" android:layout_marginTop="5dp" android:layout_marginBottom="7dp" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" app:cardCornerRadius="6dp" app:cardElevation="2dp">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="15sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_device_name" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:paddingStart="12dp" android:paddingEnd="4dp" style="@style/BaseTextAppearance_Medium"/>
        <TextView android:textSize="13sp" android:textColor="@color/color_home_location_on" android:ellipsize="end" android:id="@+id/tv_device_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:paddingEnd="12dp" android:layout_marginStart="12dp" style="@style/BaseTextAppearance_Regular"/>
        <RelativeLayout android:id="@+id/rl_device_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="6dp">
            <ImageView android:id="@+id/iv_device_icon" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginTop="14dp" android:contentDescription="@null" app:srcCompat="@mipmap/icon_device_plug"/>
            <ImageView android:id="@+id/iv_share_icon" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/home_item_share_device" android:layout_alignBottom="@+id/iv_device_icon" android:contentDescription="@null" android:layout_marginEnd="-2dp" android:layout_alignEnd="@+id/iv_device_icon"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="14dp" android:layout_marginBottom="6dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/iv_share_icon" android:layout_alignParentEnd="true">
                <TextView android:textSize="10sp" android:textColor="@color/color_home_offline" android:ellipsize="end" android:layout_gravity="end|center_vertical" android:id="@+id/tv_offline" android:background="@drawable/shape_home_device_offline" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_item_offline" android:lines="1" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp" style="@style/BaseTextAppearance_Medium"/>
            </FrameLayout>
            <RelativeLayout android:id="@+id/rl_extra_info" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="-8dp" android:layout_marginBottom="4dp" android:layout_alignTop="@+id/iv_device_icon" android:layout_toStartOf="@+id/rl_operation" android:layout_toEndOf="@+id/iv_share_icon">
                <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/tv_trigger_log" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="2dp"/>
                <TextView android:textSize="12sp" android:textColor="@color/common_iot_dark_black" android:ellipsize="end" android:id="@+id/tv_low_battery" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/switch_low_battery" android:maxLines="2" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="2dp" app:drawableStartCompat="@drawable/ic_trv_power"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="8dp">
                    <com.tplink.iot.widget.trv.MarqueeTextView android:ellipsize="marquee" android:id="@+id/tv_trv_temp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:drawablePadding="4dp" android:marqueeRepeatLimit="marquee_forever" style="@style/common_text_main_dark_medium_14dp"/>
                    <com.tplink.iot.widget.trv.MarqueeTextView android:ellipsize="marquee" android:id="@+id/tv_trv_state" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:drawablePadding="4dp" android:marqueeRepeatLimit="marquee_forever" style="@style/common_text_secondary_regular_12dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_operation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
                <com.tplink.libtpcontrols.materialnormalcompat.checkbox.TPCheckboxCompat android:id="@+id/cb_selected" android:background="@color/transparent" android:padding="10dp" android:layout_width="44dp" android:layout_height="44dp" android:button="@color/transparent" android:layout_centerInParent="true" android:drawableStart="@drawable/selector_home_long_click_off"/>
                <ImageView android:id="@+id/iv_device_switch" android:visibility="invisible" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginBottom="8dp" android:src="@drawable/device_on_check_selector" android:layout_centerInParent="true" android:contentDescription="@null"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</com.tplink.iot.widget.RippleCardView>
