<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_gravity="bottom" android:id="@+id/group_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="12dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:cardCornerRadius="6dp" app:cardElevation="0dp"/>
    <com.tplink.iot.widget.RippleCardView android:id="@+id/cv_home_item_card" android:layout_width="match_parent" android:layout_height="108dp" android:layout_marginTop="5dp" android:layout_marginBottom="4dp" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" app:bindChildViewId="@+id/home_item_switch_img" app:cardCornerRadius="6dp" app:cardElevation="2dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="8dp">
                <TextView android:textSize="15sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_device_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:lines="1" android:layout_marginEnd="2dp" android:layout_toStartOf="@+id/iv_new_device" style="@style/BaseTextAppearance_Medium"/>
                <TextView android:textSize="8sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/iv_new_device" android:background="@drawable/bg_small_round_rectange_yellow" android:paddingBottom="0.8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/home_page_device_new" android:paddingStart="2dp" android:paddingEnd="2dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="13sp" android:textColor="@color/color_home_location_on" android:ellipsize="end" android:id="@+id/tv_home_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:layout_below="@+id/tv_device_name" android:paddingEnd="4dp" style="@style/BaseTextAppearance_Regular"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/view_change_plug" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="6dp">
                <ImageView android:id="@+id/iv_home_plug_icon" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginTop="14dp" app:srcCompat="@mipmap/icon_device_plug"/>
                <ImageView android:id="@+id/iv_device_show_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/home_item_share_device" android:layout_alignBottom="@+id/iv_home_plug_icon" android:layout_marginEnd="-2dp" android:layout_alignEnd="@+id/iv_home_plug_icon"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="-2dp" android:layout_marginBottom="4dp" android:layout_alignTop="@+id/iv_home_plug_icon" android:layout_toStartOf="@+id/rl_device_state" android:layout_toEndOf="@+id/iv_device_show_icon">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                        <ImageView android:gravity="center_vertical" android:id="@+id/iv_light_effect" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/home_item_direct" android:layout_centerVertical="true" android:layout_marginStart="8dp"/>
                        <TextView android:gravity="center_vertical" android:id="@+id/iv_bulb_brightness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="8dp" style="@style/common_text_white_medium_14dp"/>
                        <ImageView android:gravity="center_vertical" android:id="@+id/music_rhythm_point_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="8dp"/>
                        <FrameLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/iv_bulb_brightness" android:layout_alignBottom="@+id/iv_bulb_brightness" android:layout_toEndOf="@+id/iv_bulb_brightness">
                            <com.tplink.iot.widget.colorbulb.ColorPointHomeView android:layout_gravity="center" android:id="@+id/color_point_view" android:visibility="gone" android:layout_width="15dp" android:layout_height="15dp" android:layout_margin="2dp"/>
                            <com.tplink.iot.devices.lightstrip.widget.LightingEffectPointView android:layout_gravity="center" android:id="@+id/lighting_effect_point_view" android:visibility="gone" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="2dp" android:scaleType="centerCrop" app:pv_color_point_padding="4dp"/>
                        </FrameLayout>
                        <TextView android:textSize="12sp" android:textColor="@color/common_iot_dark_black" android:ellipsize="end" android:id="@+id/tv_detected_log" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="2dp" android:autoSizeTextType="uniform" android:autoSizeMinTextSize="8sp"/>
                        <TextView android:textSize="12sp" android:textColor="@color/common_iot_dark_black" android:ellipsize="end" android:id="@+id/tv_low_battery" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/switch_low_battery" android:maxLines="2" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="2dp" app:drawableStartCompat="@drawable/ic_trv_power"/>
                    </RelativeLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.tplink.iot.widget.trv.MarqueeTextView android:ellipsize="marquee" android:id="@+id/tv_trv_temp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:drawablePadding="4dp" android:marqueeRepeatLimit="marquee_forever" style="@style/common_text_main_dark_medium_14dp"/>
                        <com.tplink.iot.widget.trv.MarqueeTextView android:ellipsize="marquee" android:id="@+id/tv_trv_state" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:drawablePadding="4dp" android:marqueeRepeatLimit="marquee_forever" style="@style/common_text_secondary_regular_12dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="14dp" android:layout_marginBottom="6dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/iv_device_show_icon" android:layout_alignParentEnd="true">
                    <TextView android:textSize="10sp" android:textColor="@color/color_home_offline" android:ellipsize="end" android:layout_gravity="end|center_vertical" android:id="@+id/iv_home_status" android:background="@drawable/shape_home_device_offline" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_item_offline" android:lines="1" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp" style="@style/BaseTextAppearance_Medium"/>
                </FrameLayout>
                <RelativeLayout android:id="@+id/rl_device_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
                    <com.tplink.libtpcontrols.materialnormalcompat.checkbox.TPCheckboxCompat android:id="@+id/cb_home_item" android:background="@color/transparent" android:padding="10dp" android:visibility="invisible" android:layout_width="44dp" android:layout_height="44dp" android:button="@color/transparent" android:layout_centerInParent="true" android:drawableStart="@drawable/selector_home_long_click_off"/>
                    <ImageView android:id="@+id/home_item_switch_img" android:visibility="invisible" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginBottom="8dp" android:src="@drawable/device_on_check_selector" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/iv_device_loading" android:visibility="visible" android:layout_width="20dp" android:layout_height="20dp" android:src="@mipmap/icon_home_loading" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.tplink.iot.widget.RippleCardView>
</FrameLayout>
